<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.consultationresultats.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Consultation des résultats du BTS 2024" wrapText="true">
        <font>
            <Font size="18"/>
        </font>
    </Label>

    <Label text="Numéro de Matricule" />

    <TextField fx:id="inscriptionField" promptText="EX: 18235266B"/>

    <Button fx:id="consulterButton" text="Consulter" onAction="#onConsulterButtonClick" mnemonicParsing="false" style="-fx-background-color: #F44336; -fx-text-fill: white;">
        <font>
            <Font size="16"/>
        </font>
    </Button>
</VBox>
